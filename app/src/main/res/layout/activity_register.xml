<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="getresultsapp.sointeractve.pl.getresultsapp.activities.RegisterActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editRegisterFirstName"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Your first name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editRegisterLastName"
        android:layout_below="@+id/editRegisterFirstName"
        android:layout_alignLeft="@+id/editRegisterFirstName"
        android:layout_alignStart="@+id/editRegisterFirstName"
        android:layout_alignRight="@+id/editRegisterFirstName"
        android:layout_alignEnd="@+id/editRegisterFirstName"
        android:hint="Your last name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editRegisterEmail"
        android:layout_below="@+id/editRegisterLastName"
        android:layout_alignLeft="@+id/editRegisterLastName"
        android:layout_alignStart="@+id/editRegisterLastName"
        android:layout_alignRight="@+id/editRegisterLastName"
        android:layout_alignEnd="@+id/editRegisterLastName"
        android:hint="Your e-mail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editRegisterPassword"
        android:layout_below="@+id/editRegisterEmail"
        android:layout_alignLeft="@+id/editRegisterEmail"
        android:layout_alignStart="@+id/editRegisterEmail"
        android:layout_alignRight="@+id/editRegisterEmail"
        android:layout_alignEnd="@+id/editRegisterEmail"
        android:hint="Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editRegisterRePassword"
        android:layout_below="@+id/editRegisterPassword"
        android:layout_alignRight="@+id/editRegisterPassword"
        android:layout_alignEnd="@+id/editRegisterPassword"
        android:layout_alignLeft="@+id/editRegisterPassword"
        android:layout_alignStart="@+id/editRegisterPassword"
        android:hint="Retype password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/buttonRegister"
        android:layout_below="@+id/editRegisterRePassword"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
