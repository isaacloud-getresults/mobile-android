<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="5dp"
    android:background="@drawable/list_group_background">

    <ImageView
        android:id="@+id/locationImage"
        android:background="@drawable/avatar_location"
        android:layout_margin="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <LinearLayout
            android:layout_toRightOf="@+id/locationImage"
            android:id="@+id/locationText"
            android:layout_width="220dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/lblListHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/color_theme_text_light" />

        <IconTextView
            android:id="@+id/locationStatsCounter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/color_theme_text_light"/>

    </LinearLayout>

    <IconTextView
        android:id="@+id/indicator"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="{fa-chevron-down}"
        android:textSize="20dp"
        android:textColor="@color/color_theme_gray_light" />

</RelativeLayout>