<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_profile_height"
    android:orientation="vertical"
    android:gravity="center">

    <IconTextView
        android:id="@+id/userImage"
        android:background="@drawable/avatar"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{fa-user}"
        android:textSize="60dp"
        android:textColor="@color/color_theme_gray_light"
        android:gravity="center"/>

    <TextView
            android:id="@+id/profile_card_text_name"
            android:textSize="24sp"
            android:textAllCaps="true"
            android:textColor="@color/color_theme_text_dark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/color_theme_gray"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <IconTextView
                android:id="@+id/profile_card_text_level"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_theme_text_dark"
                android:text="{fa-user}  Rank:"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/count_background"
                android:id="@+id/counterLevel"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:textColor="@color/color_theme_text_light"
                android:gravity="center"/>

        </RelativeLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/color_theme_gray"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">


            <IconTextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/profile_card_text_score"
                android:textSize="18dp"
                android:textColor="@color/color_theme_text_dark"
                android:text="{fa-star}  Total score:"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/count_background"
                android:id="@+id/counterScore"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:textColor="@color/color_theme_text_light"
                android:gravity="center"/>

        </RelativeLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/color_theme_gray"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/profile_card_text_achievements"
                android:textSize="18dp"
                android:textColor="@color/color_theme_text_dark"
                android:text="{fa-trophy}  Achievements unlocked:"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/count_background"
                android:id="@+id/counterAchievements"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:textColor="@color/color_theme_text_light"
                android:gravity="center"/>

        </RelativeLayout>

     </LinearLayout>

</LinearLayout>