<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/card_profile_height"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:src="@drawable/avatar"/>

    <TextView
        android:id="@+id/profile_card_text_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/color_theme_text_dark"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/color_theme_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <IconTextView
                android:id="@+id/profile_card_text_level"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="{fa-user}  Rank:"
                android:textColor="@color/color_theme_text_dark"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/counterLevel"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/count_background"
                android:gravity="center"
                android:textColor="@color/color_theme_text_light"
                android:textSize="18dp"/>

        </RelativeLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/color_theme_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">


            <IconTextView
                android:id="@+id/profile_card_text_score"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="{fa-star}  Total score:"
                android:textColor="@color/color_theme_text_dark"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/counterScore"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/count_background"
                android:gravity="center"
                android:textColor="@color/color_theme_text_light"
                android:textSize="18dp"/>

        </RelativeLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/color_theme_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <IconTextView
                android:id="@+id/profile_card_text_achievements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="{fa-trophy}  Achievements unlocked:"
                android:textColor="@color/color_theme_text_dark"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/counterAchievements"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/count_background"
                android:gravity="center"
                android:textColor="@color/color_theme_text_light"
                android:textSize="18dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>