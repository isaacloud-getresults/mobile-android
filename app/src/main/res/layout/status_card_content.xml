<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_status_height">

    <ImageView
        android:id="@+id/colorBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/avatar"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/colorBorder"
        android:orientation="vertical">

        <TextView
            android:id="@+id/status_card_currentlyAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="CURRENTLY AT:"
            android:textColor="@color/color_theme_text_light"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/status_card_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAllCaps="true"
            android:textColor="@color/color_theme_text_light"
            android:textSize="30sp"/>

        <IconTextView
            android:id="@+id/status_card_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_theme_text_light"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>